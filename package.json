{
  "name": "snapkit-bot",
  "version": "2.1.0",
  "description": "SnapKit - мгновенный набор инструментов для контента. Создавайте share-ссылки, обрабатывайте видео, генерируйте плашки за секунды.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "update-deps": "npm update && npm audit fix",
    "prepare": "husky || true"
  },
  "keywords": [
    "telegram",
    "bot",
    "snapkit",
    "share",
    "content",
    "media",
    "link"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.13.1",
    "sharp": "^0.34.5",
    "axios": "^1.13.2",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
